# START NEW SESSION
new  -s dev -n dotfiles
splitw -v -p 20 -c "#{pane_current_path}"
send-keys -t 0 "cd ~/workspace/dotfiles" Enter
send-keys -t 0 "vim" Enter
send-keys -t 1 "cd ~/workspace/dotfiles" Enter


# TASK MANAGER
neww -n tasks
splitw -v -p 20 -c "#{pane_current_path}"
send-keys -t 0 "cd ~/workspace/task-manager" Enter
send-keys -t 0 "vim dxp/interact/users-management/meetings/standup.md" Enter
send-keys -t 1 "cd ~/workspace/task-manager" Enter
selectp -t 0




